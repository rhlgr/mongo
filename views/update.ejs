<div class="container shadow-lg mt-5 d-flex">
  <!--left  -->
  <div class="left">
    <h1>Welcome To User Registration Page</h1>
    <div class="hr"></div>
    <h3>Sign up to create a new account.</h3>
  </div>
  <!-- right -->
  <div class="right">
    <form action="/update/<%= user._id%>" method="post" class="w-100 d-flex flex-column">
      <input class="form-control w-75 m-auto"  value="<%= user.username%>" type="text" name="username" placeholder="username">
      <input class="form-control m-auto  w-75  my-5" type="email" value="<%= user.email%>" name="email" placeholder="email">

      <button class="btn btn-success m-auto w-25 mt-5 text-center">Update</button>
    </form>
  
    <!-- <a href="/signin" class="text-decoration-none mt-5">Update</a> -->
  </div>
</div>

